{% extends 'GoproInventarioBundle::layout.html.twig' %}
{% block title %}Lista de mantenimientos{% endblock title %}
{% block titulo %}Lista de mantenimientos{% endblock titulo %}
{% block content %}
    <table class="listaRegistros">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Ejecutor</th>
                <th>Creado</th>
                <th>Modificado</th>
                <th>Actciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gopro_inventario_mantenimiento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.fecha|date('Y-m-d') }}</td>
                <td>{% if entity.mantenimientotipo %}{{ entity.mantenimientotipo.nombre }}{% endif %}</td>
                <td>{% if entity.mantenimientoestado %}{{ entity.mantenimientoestado.nombre }}{% endif %}</td>
                <td>{% if entity.user %}{{ entity.user.nombre }}{% endif %}</td>
                <td>{{ entity.creado|date('Y-m-d H:i:s') }}</td>
                <td>{{ entity.modificado|date('Y-m-d H:i:s') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gopro_inventario_mantenimiento_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('gopro_inventario_mantenimiento_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="listaAcciones">
        <li>
            <a class="boton" href="{{ path('gopro_inventario_mantenimiento_new') }}">
                Agregar un mantenimiento
            </a>
        </li>
    </ul>
{% endblock content %}
