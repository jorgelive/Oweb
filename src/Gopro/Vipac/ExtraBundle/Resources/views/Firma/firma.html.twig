{% extends 'GoproVipacExtraBundle::layout.html.twig' %}
{% block title %}Generador de Firmas{% endblock title %}
{% block titulo %}Generador de Firmas{% endblock titulo %}
{% block stylesheets %}
    {{ parent() }}
    {% if css|default %}
        {{ css | raw}}
        <style type="text/css">
            textarea.codigo{ border:#000000 solid 1px; margin:10px; width:600px; height: 600px;}
        </style>
    {% endif %}
{% endblock stylesheets%}

{% block content %}
    {{ form(formulario) }}
    {% if body|default %}
        {{ body | raw}}
        <textarea class="codigo">
            {{ textarea }}
        </textarea>
    {% endif %}

{% endblock content %}




