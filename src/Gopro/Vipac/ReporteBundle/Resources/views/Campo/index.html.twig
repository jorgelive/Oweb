{% extends 'GoproVipacReporteBundle::layout.html.twig' %}
{% block content %}
    <h1>Lista de campos</h1>

    <table class="listaRegistros">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Nombre a mostrar</th>
                <th>Predeterminado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gopro_vipac_reporte_campo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.nombremostrar }}</td>
                <td>{{ entity.predeterminado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('gopro_vipac_reporte_campo_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('gopro_vipac_reporte_campo_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="listaAcciones">
        <li>
            <a class="boton" href="{{ path('gopro_vipac_reporte_campo_new') }}">
                Crear un nuevo registro
            </a>
        </li>
    </ul>
{% endblock content %}
